@model WMS.ViewModel.BaseData.BaseDepartmentVMs.BaseDepartmentVM
@using WalkingTec.Mvvm.Core.Extensions;
@inject IStringLocalizer<Program> Localizer;

<wt:container>
    <wt:form vm="@Model" url="/BaseData/BaseDepartment/Edit">
        <wt:row items-per-row="ItemsPerRowEnum.Two">
            <wt:textbox field="Entity.Code" disabled="true" />
            <wt:textbox field="Entity.Name" disabled="true" />
        </wt:row>
        <wt:row items-per-row="ItemsPerRowEnum.Two">
            <wt:combobox field="Entity.OrganizationId" disabled="true" item-url="/BaseData/BaseDepartment/GetBaseOrganizations" label-text="@Localizer["Page.组织"].Value" empty-text="@Localizer["Sys.PleaseSelect"]" id="g3a295c7cd21041e3a3023c7523c5ad24" multi-select="false" />
            <wt:combobox field="Entity.IsEffective" disabled="true" empty-text="@Localizer["Sys.PleaseSelect"]" id="g488c82c9f91a434d81cdccd3a2495356" multi-select="false" />
        </wt:row>
        <wt:row items-per-row="ItemsPerRowEnum.Two">
            <wt:textbox field="Entity.SourceSystemId" disabled="true" />
            <wt:datetime field="Entity.LastUpdateTime" type="DateTime" disabled="true" />
        </wt:row>

        <wt:row items-per-row="ItemsPerRowEnum.One">
            <wt:textarea field="Entity.Memo" />
        </wt:row>

        <wt:container align="AlignEnum.Right">
            <wt:submitbutton text="@Localizer["Sys.Submit"].Value" />
            <wt:closebutton text="@Localizer["Sys.Close"].Value" />
        </wt:container>

        <wt:hidden field="Entity.ID" />
    </wt:form>

</wt:container>


