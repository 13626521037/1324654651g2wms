@model WMS.ViewModel.InventoryManagement.InventoryPalletVirtualVMs.InventoryPalletVirtualVM
@using WalkingTec.Mvvm.Core.Extensions;
@inject IStringLocalizer<Program> Localizer;

<wt:container>
    <wt:form vm="@Model">
        <wt:row items-per-row="ItemsPerRowEnum.One">
            <div style="width:80%;float:left;">
                <wt:row items-per-row="ItemsPerRowEnum.Two">
                    <wt:display field="Entity.Code" />
                    <wt:display field="Entity.Status" />
                </wt:row>
                <wt:row items-per-row="ItemsPerRowEnum.Two">
                    <wt:display field="Entity.Location.WhArea.WareHouse.Code" label-text="@Localizer["Page.存储地点"].Value" />
                    <wt:display field="Entity.Location.WhArea.Code" label-text="@Localizer["Page.库区"].Value" />
                </wt:row>
                <wt:row items-per-row="ItemsPerRowEnum.Two">
                    <wt:display field="Entity.Location.Code" label-text="@Localizer["Page.库位"].Value" />
                    <wt:display field="Entity.SysVersion" />
                </wt:row>
                <wt:row items-per-row="ItemsPerRowEnum.Two">
                    <wt:display field="Entity.CreateTime" />
                    <wt:display field="Entity.CreateBy" />
                </wt:row>
                <wt:row items-per-row="ItemsPerRowEnum.Two">
                    <wt:display field="Entity.UpdateTime" />
                    <wt:display field="Entity.UpdateBy" />
                </wt:row>
                <wt:row items-per-row="ItemsPerRowEnum.One">
                    <wt:display field="Entity.Memo" />
                </wt:row>
            </div>
            <div style="width:20%;float:right;">
                <wt:row items-per-row="ItemsPerRowEnum.One">
                    <script src="qrcode.min.js"></script>
                    <div style="text-align: center;">
                        <canvas id="qrcode"></canvas>
                        <br />
                        <span id="qrcode-text">@Model.Entity.Code</span>
                    </div>
                    <script>
                        const text = "@Model.Entity.Code";  // 要编码的内容
                        const canvas = document.getElementById('qrcode');  // 获取 canvas 元素

                        QRCode.toCanvas(canvas, text, function(error) {
                            if (error) {
                                console.error(error);
                            } else {
                                console.log("QR Code successfully generated!");
                            }
                        });
                    </script>
                </wt:row>
            </div>
        </wt:row>
        <wt:container id="g7591766774">
            <wt:grid use-local-data="true" hidden-panel="true" hidden-checkbox="true" height="-400" vm="InventoryPalletVirtualLineInventoryPalletList2" disabled="true" label-text="@Localizer["Page.组托单"].Value" hide-label="true" />
        </wt:container>

        <wt:container align="AlignEnum.Right">
            <wt:closebutton text="@Localizer["Sys.Close"].Value" />
        </wt:container>

    </wt:form>

</wt:container>


