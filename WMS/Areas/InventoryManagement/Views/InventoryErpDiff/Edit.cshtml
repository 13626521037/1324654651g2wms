      <wt:combobox field="Entity.WhId"  item-url="/InventoryManagement/InventoryErpDiff/GetBaseWareHouses" label-text="@Localizer["Page.存储地点"].Value" empty-text="@Localizer["Sys.PleaseSelect"]" id="gb54ea28df34d4848b442240696277a1a" multi-select="false"/>
