  <div style="margin-bottom:10px;"> "@Localizer["Sys.BatchEditConfirm"].Value"</div>
  <wt:row  items-per-row="ItemsPerRowEnum.Two">
    <wt:textbox field="LinkedVM.CreatePerson"/>
    <wt:combobox field="LinkedVM.OrganizationId"  item-url="/SalesManagement/SalesShip/GetBaseOrganizations" label-text="@Localizer["Page.组织"].Value" id="g880778bff67044f8a26ace38cc66bf74"/>
