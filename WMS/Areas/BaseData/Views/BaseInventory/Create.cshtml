
@model WMS.ViewModel.BaseData.BaseInventoryVMs.BaseInventoryVM
@using WalkingTec.Mvvm.Core.Extensions;
@inject IStringLocalizer<Program> Localizer;

<wt:container>
  <wt:form vm="@Model" url="/BaseData/BaseInventory/Create" >
    <wt:row  items-per-row="ItemsPerRowEnum.Two">
      <wt:combobox field="Entity.ItemMasterId"  item-url="/BaseData/BaseInventory/GetBaseItemMasters" label-text="@Localizer["Page.料品"].Value" empty-text="@Localizer["Sys.PleaseSelect"]" id="gda624fa7cce74c35921bff5cf4dbccb2" multi-select="false"/>
      <wt:combobox field="Entity.WhLocationId"  item-url="/BaseData/BaseInventory/GetBaseWhLocations" label-text="@Localizer["Page.库位"].Value" empty-text="@Localizer["Sys.PleaseSelect"]" id="g9063aec633674b80b1bd91fca3d37e4e" multi-select="false"/>
    </wt:row>
    <wt:row  items-per-row="ItemsPerRowEnum.Two">
      <wt:textbox field="Entity.BatchNumber"/>
      <wt:textbox field="Entity.SerialNumber"/>
    </wt:row>
    <wt:row  items-per-row="ItemsPerRowEnum.Two">
      <wt:textbox field="Entity.Seiban"/>
      <wt:textbox field="Entity.Qty"/>
    </wt:row>
    <wt:row  items-per-row="ItemsPerRowEnum.Two">
      <wt:switch field="Entity.IsAbandoned"/>
      <wt:textbox field="Entity.ItemSourceType"/>
    </wt:row>
    <wt:row  items-per-row="ItemsPerRowEnum.Two">
      <wt:combobox field="Entity.FrozenStatus" empty-text="@Localizer["Sys.PleaseSelect"]" id="gd86920b84fe04b14ad7eae77ee37d453" multi-select="false"/>
    </wt:row>

    <wt:container align="AlignEnum.Right">
      <wt:submitbutton  text="@Localizer["Sys.Submit"].Value"/>
      <wt:closebutton  text="@Localizer["Sys.Close"].Value"/>
    </wt:container>

  </wt:form>

</wt:container>


